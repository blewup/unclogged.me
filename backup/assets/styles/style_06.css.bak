/*
 * Custom styles for the plumbing guide page.  As with other pages
 * the navigation bar has a blurred background and rounded corners.
 * Tailwind classes provide most of the layout styling, so only
 * utilities are defined here.
 */

@font-face {
    font-family: 'Black Ops One';
    src: url('../fonts/BlackOps.ttf') format('truetype');
}
@font-face {
    font-family: 'Plus Jakarta Sans';
    src: url('../fonts/PlusJakartaSans.ttf') format('truetype');
}

.glass-nav {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: transform 0.3s ease-in-out;
}
.radius-override {
    border-radius: 15px !important;
}
.hover-scale:hover {
    transform: scale(1.05);
    transition: transform 0.2s;
}

html {
    scroll-behavior: smooth;
}

/*
 * Typography enhancements for the plumbing page
 */
body {
    font-family: 'Inter', 'Plus Jakarta Sans', sans-serif;
}
h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', 'Merriweather', serif;
}
pre, code {
    font-family: 'JetBrains Mono', monospace;
}