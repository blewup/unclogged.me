/*
 * Custom styles for the tools page.  See style_01.css for details on
 * these utility classes.  The tools grid uses Tailwind for layout,
 * while this file defines the glass navigation bar and basic transitions.
 */

@font-face {
    font-family: 'Black Ops One';
    src: url('../fonts/BlackOps.ttf') format('truetype');
}
@font-face {
    font-family: 'Plus Jakarta Sans';
    src: url('../fonts/PlusJakartaSans.ttf') format('truetype');
}

.glass-nav {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: transform 0.3s ease-in-out;
}

.radius-override {
    border-radius: 15px !important;
}

.hover-scale:hover {
    transform: scale(1.05);
    transition: transform 0.2s;
}

html {
    scroll-behavior: smooth;
}

/*
 * Typography enhancements for the tools page
 */
body {
    font-family: 'Inter', 'Plus Jakarta Sans', sans-serif;
}
h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', 'Merriweather', serif;
}
pre, code {
    font-family: 'JetBrains Mono', monospace;
}