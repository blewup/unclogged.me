/*
 * Custom styles for the pricing (tarification) page.
 * This page shares common navigation and typographic styles with other pages
 * in the Deboucheur Expert site. It defines basic utilities such as
 * backdrop blur for the nav bar, radius overrides, and hover scaling.
 */

@font-face {
    font-family: 'Black Ops One';
    src: url('../fonts/BlackOps.ttf') format('truetype');
}
@font-face {
    font-family: 'Plus Jakarta Sans';
    src: url('../fonts/PlusJakartaSans.ttf') format('truetype');
}

/* Glass effect for the navigation bar */
.glass-nav {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: transform 0.3s ease-in-out;
}

/* Apply a consistent border radius override to buttons and cards */
.radius-override {
    border-radius: 15px !important;
}

/* Slight scale on hover for interactive elements */
.hover-scale:hover {
    transform: scale(1.05);
    transition: transform 0.2s;
}

html {
    scroll-behavior: smooth;
}

/* Typography defaults: body uses Inter/Jakarta, headings use Playfair and Merriweather */
body {
    font-family: 'Inter', 'Plus Jakarta Sans', sans-serif;
}
h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', 'Merriweather', serif;
}
pre, code {
    font-family: 'JetBrains Mono', monospace;
}